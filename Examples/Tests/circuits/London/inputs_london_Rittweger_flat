# Maximum number of time steps

my_constants.prob_lo = -640.e-9
my_constants.prob_hi =  640.e-9

################################
# Time Convergence
################################

my_constants.nx = 256
my_constants.ny = 256
my_constants.nz = 256
amr.max_grid_size = 128
max_step = 200
warpx.cfl = 0.9

