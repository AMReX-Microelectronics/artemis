################################
####### GENERAL PARAMETERS ######
#################################
max_step = 500
amr.n_cell = 128 128 128
amr.max_grid_size = 128
amr.blocking_factor = 16
geometry.coord_sys   = 0
geometry.prob_lo     =  -16.e-6 -16.e-6 -16.e-6
geometry.prob_hi     =   16.e-6  16.e-6  16.e-6
amr.max_level = 0
# use pec instead of pml overlaying current source so you don't get a reflection
boundary.field_lo = periodic pml periodic
boundary.field_hi = periodic pml periodic

#################################
############ NUMERICS ###########
#################################
warpx.verbose = 1
warpx.use_filter = 0
warpx.cfl = 0.9

algo.em_solver_medium = macroscopic # vacuum/macroscopic

algo.macroscopic_sigma_method = laxwendroff # laxwendroff or backwardeuler

macroscopic.sigma_function(x,y,z) = "sigma_0 + (sigma_pd - sigma_0) * (x > -0.000004) * (x < 0.000004) * (z > -0.000004) * (z < 0.000004)"

macroscopic.epsilon_function(x,y,z) = "epsilon_0 + (epsilon_r_pd - 1.) * epsilon_0 * (x > -0.000004) * (x < 0.000004) * (z > -0.000004) * (z < 0.000004)"

macroscopic.mu_function(x,y,z) = "mu_0 + (mu_r_pd - 1.) * mu_0 * (x > -0.000004) * (x < 0.000004) * (z > -0.000004) * (z < 0.000004)"

#################################
############ FIELDS #############
#################################

my_constants.pi = 3.14159265359

my_constants.c = 299792458.
my_constants.c = 83147467.6397237

my_constants.wavelength = 4.e-6

my_constants.sigma_0 = 0.0
my_constants.sigma_pd = 9.5e4
my_constants.sigma_pd = 0.0

my_constants.epsilon_0 = 8.8541878128e-12
my_constants.epsilon_r_pd = 13.

my_constants.mu_0 = 1.25663706212e-06
my_constants.mu_r_pd = 1.0

warpx.B_excitation_on_grid_style = parse_B_excitation_grid_function

warpx.Bx_excitation_flag_function(x,y,z) = "(x > -0.000004) * (x < 0.000004) * (z > -0.000004) * (z < 0.000004) * (y <= -8.e-6 + 1.25e-7) * (y >= -8.e-6 - 1.25e-7)"
warpx.By_excitation_flag_function(x,y,z) = "0."
warpx.Bz_excitation_flag_function(x,y,z) = "0."

warpx.Bx_excitation_grid_function(x,y,z,t) = "cos((2*pi*x)/0.000016) * cos(2*pi*c/wavelength*t)"
warpx.By_excitation_grid_function(x,y,z,t) = "0."
warpx.Bz_excitation_grid_function(x,y,z,t) = "0."

# Diagnostics
diagnostics.diags_names = plt
plt.intervals = 5
plt.fields_to_plot = Ex Ey Ez Bx By Bz
plt.diag_type = Full
