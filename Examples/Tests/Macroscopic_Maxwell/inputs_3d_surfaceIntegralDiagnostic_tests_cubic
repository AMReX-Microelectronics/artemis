# This is test case for verifying reduced diagnostics to calculate surface/volume integrals for cubic cells in a noncubic domain. (use USE_LLG=FALSE, ie., no M field)
# Efield is simulated in a vacuum and initialized on each cells to be equal to 1.

################################
####### GENERAL PARAMETERS ######
#################################
max_step = 10
amr.n_cell = n_cellx n_celly n_cellz

#amr.max_grid_size = 16
#amr.blocking_factor = 4
amr.max_grid_size = 2
amr.blocking_factor = 2
geometry.dims = 3
geometry.prob_lo     =  -Lx/2. -Ly/2. -Lz/2.
geometry.prob_hi     =   Lx/2.  Ly/2.  Lz/2.
boundary.field_lo = periodic periodic periodic
boundary.field_hi = periodic periodic periodic
amr.max_level = 0

# domain size
#my_constants.n_cellx = 8
#my_constants.n_celly = 16
#my_constants.n_cellz = 12
my_constants.n_cellx = 2
my_constants.n_celly = 4
my_constants.n_cellz = 2

# grid spacing
my_constants.Lx = 8.e-6
my_constants.Ly = 16.e-6
#my_constants.Lz = 12.e-6
my_constants.Lz = 8.e-6
my_constants.tiny = 1.e-12
my_constants.dx = Lx/n_cellx
my_constants.dy = Ly/n_celly
my_constants.dz = Lz/n_cellz
#################################
############ NUMERICS ###########
#################################
warpx.verbose = 1
warpx.use_filter = 0
warpx.cfl = 0.9
my_constants.sigma = 0.
my_constants.eps_r = 1.0
my_constants.mu_r = 1.0

algo.em_solver_medium = macroscopic # vacuum/macroscopic
algo.macroscopic_sigma_method = laxwendroff # laxwendroff or backwardeuler
macroscopic.sigma_function(x,y,z) = "sigma"
macroscopic.epsilon_function(x,y,z) = "8.8541878128e-12*eps_r"
macroscopic.mu_function(x,y,z) = "1.25663706212e-06*mu_r"

#################################
############ FIELDS #############
#################################

my_constants.pi = 3.14159265359
my_constants.c = 299792458.

warpx.E_ext_grid_init_style = parse_E_ext_grid_function
warpx.Ez_external_grid_function(x,y,z) = "1"
warpx.Ex_external_grid_function(x,y,z) = "1"
warpx.Ey_external_grid_function(x,y,z) = "1"

warpx.B_ext_grid_init_style = parse_B_ext_grid_function
warpx.Bx_external_grid_function(x,y,z)= "0."
warpx.By_external_grid_function(x,y,z)= "0."
warpx.Bz_external_grid_function(x,y,z) = "0."

# Diagnostics
diagnostics.diags_names = plt chk
plt.intervals = 10
plt.fields_to_plot = Ex Ey Ez Bx By Bz
plt.diag_type = Full

chk.format = checkpoint
chk.intervals = 100
chk.diag_type = Full


warpx.reduced_diags_names = Int_xPlane Int_yPlane Int_zPlane
my_constants.eps=1.e-9
Int_xPlane.type = RawEFieldReduction
Int_xPlane.reduction_type = integral
Int_xPlane.integration_type = surface
Int_xPlane.intervals = 1
Int_xPlane.surface_normal = X
my_constants.XPlaneLoc=0.

Int_yPlane.type = RawEFieldReduction
Int_yPlane.reduction_type = integral
Int_yPlane.integration_type = surface
Int_yPlane.intervals = 1
Int_yPlane.surface_normal = Y
my_constants.YPlaneLoc=0.

Int_zPlane.type = RawEFieldReduction
Int_zPlane.reduction_type = integral
Int_zPlane.integration_type = surface
Int_zPlane.intervals = 1
Int_zPlane.surface_normal = Z
my_constants.ZPlaneLoc=0.

#Example 1
## This is for a full X-plane strip. Ex=Ey=Ez=n_celly*n_cellz*dy*dz = 2*4*(4.e-6)**2 = 1.28e-10
#Int_xPlane.reduced_function(x,y,z) = " (x >= XPlaneLoc - dx/2.) * (x <= XPlaneLoc) * (y >= -Ly/2.) * (y <= Ly/2.) * (z >= -Lz/2.) * (z <= Lz/2.) * 1" 
## This is for a full Y-plane strip. Ex=Ey=Ez=n_cellx*n_cellz*dx*dz = 2*2*(4.e-6)**2 = 6.4e-11
#Int_yPlane.reduced_function(x,y,z) = " (x >= -Lx/2.) * (x <= Lx/2.) * (y >= YPlaneLoc - dy/2.) * (y <= YPlaneLoc) * (z >= -Lz/2.) * (z <= Lz/2.) * 1" 
## This is for a full Z-plane strip. Ex=Ey=Ez=n_cellx*n_celly*dx*dy = 4*2*(4.e-6)**2 = 1.28e-10
#Int_zPlane.reduced_function(x,y,z) = " (x >= -Lx/2.) * (x <= Lx/2.) * (y >= -Ly/2.) * (y <= Ly/2.) * (z >= ZPlaneLoc) * (z <= dz/2.) * 1" 

# The above example is still prone to error if max_grid_size < min(n_cellx,n_celly,n_cellz). Change max_grid_size from 4 to 2 and see the error in Ey. This error is because of double-counting.

#Example 2
## This is for a half X-plane strip. Ex=Ey=Ez=0.5*n_celly*n_cellz*dy*dz = 6.4e-11 (Note the function for z; upper boundary pt is excluded)
#Int_xPlane.reduced_function(x,y,z) = " (x >= XPlaneLoc - dx/2.) * (x <= XPlaneLoc) * (y >= -Ly/2.) * (y <= Ly/2.) * (z >= 0.) * (z < Lz/2.) * 1" 
## This is for a half Y-plane strip. Ex=Ey=Ez=0.5*n_cellx*n_cellz*dx*dz = 3.2e-11 (Note the function for z; upper boundary pt is excluded)
#Int_yPlane.reduced_function(x,y,z) = " (x >= -Lx/2.) * (x <= Lx/2.) * (y >= YPlaneLoc - dy/2.) * (y <= YPlaneLoc) * (z >= 0.) * (z < Lz/2.) * 1" 
## This is for a half Z-plane strip. Ex=Ey=Ez=0.5*n_cellx*n_celly*dx*dy = 6.4e-11 (Note the function for y; upper boundary pt is excluded)
#Int_zPlane.reduced_function(x,y,z) = " (x >= -Lx/2.) * (x <= Lx/2.) * (y >= 0.) * (y < Ly/2.) * (z >= ZPlaneLoc) * (z <= dz/2.) * 1" 

#Example 3
# This is for a quarter X-plane strip. Ex=Ey=Ez=0.25*n_celly*n_cellz*dy*dz = 3.2e-11 (Note the function for y,z)
Int_xPlane.reduced_function(x,y,z) = " (x >= XPlaneLoc - dx/2.) * (x <= XPlaneLoc) * (y >= 0.) * (y < Ly/2.) * (z >= 0.) * (z < Lz/2.) * 1" 
# This is for a quarter Y-plane strip. Ex=Ey=Ez=0.25*n_cellx*n_cellz*dx*dz = 1.6e-11 (Note the function for x,z)
Int_yPlane.reduced_function(x,y,z) = " (x >= 0) * (x < Lx/2.) * (y >= YPlaneLoc - dy/2.) * (y <= YPlaneLoc) * (z >= 0.) * (z < Lz/2.) * 1" 
# This is for a quarter Z-plane strip. Ex=Ey=Ez=0.25*n_cellx*n_celly*dx*dy = 3.2e-11 (Note the function for x,y)
Int_zPlane.reduced_function(x,y,z) = " (x >= 0.) * (x < Lx/2.) * (y >= 0.) * (y < Ly/2.) * (z >= ZPlaneLoc) * (z <= dz/2.) * 1" 
